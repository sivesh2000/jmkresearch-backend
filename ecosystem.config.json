{
  "apps": [
    {
      "name": "jmkresearch-backend-app",
      "script": "src/index.js",
      "instances": 1,
      "autorestart": true,
      "watch": false,
      "time": true,
      "max_memory_restart": "1G",
      "error_file": "logs/pm2-error.log",
      "out_file": "logs/pm2-out.log",
      "log_file": "logs/pm2-combined.log",
      "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
      "merge_logs": true,
      "max_restarts": 10,
      "min_uptime": "10s",
      "env": {
        "NODE_ENV": "production"
      }
    }
  ]
}
